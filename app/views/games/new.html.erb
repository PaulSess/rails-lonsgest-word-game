<section style="margin: 280px 0 120px 37%; width: 40%;" >
  <h1>New Game</h1>
  <% @letters.each do |letter| %>
    <div style="display: inline-block; justify-content: space-around; width: 35px; height: 30px;">
    <div style="font-size: 30px; background-color: lightblue;"> <%= letter %> </div>
    </div><% end %>
</section>

<div style="display: flex; justify-content: center;" width="40%">
  <form action="score" method="score" data-turbo="false">
    <label for="score">What is the longest word you can find?</label> <br>
    <input type="text" name="score" placeholder="Go for it champ!">
    <input type="submit">
  </form>
</div>
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
